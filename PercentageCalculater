import java.util.Scanner;
public class percentage {
   public static void main(String[] args){
       Scanner sc =new Scanner(System.in);
       System.out.println("enter the marks the given below:");
       float a = 500;
       System.out.println("enter the marks of subject no 1:");
       int b= sc.nextInt();
       System.out.println("enter the marks of subject no 2:");
       int c=sc.nextInt();
       System.out.println("enter the marks of subject no 3:");
       int d = sc.nextInt();
       System.out.println("enter the marks of subject no 4:");
       int e =sc.nextInt();
       System.out.println("enter the marks of subject no 5:");
       int f = sc.nextInt();
       int  total = (b + c + d + e + f)*100;
       System.out.println(total);

       float percentage = total/a;

       System.out.println("percentage "+percentage);



    }


}
